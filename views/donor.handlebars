    <section class="add-entry">
        <h3>Add Entry</h3>
        <form id='add-donor' action="/donors" method="POST">
            <label for="first_name">First name</label><br>
            <input size="15" type="text" pattern=[a-z]{1-30} id="first_name" name="first_name" required><br>
            <label for="last_name">Last name</label><br>
            <input size="15" type="text" pattern=[a-z]{1-30} id="last_name" name="last_name" required><br>
            <label for="phone">Phone (optional)</label><br>
            <input size="15" placeholder="555-111-1111" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" type="tel" id="phone" name="phone"><br>
            <label for="email">E-mail (optional)</label><br>
            <input size="15" type="email" id="email" name="email"><br>
            <label for="donor_DOB">Date of birth</label><br>
            <input size="15" type="date" id="donor_DOB" name="donor_DOB" required><br>
            <label for="blood_type">Blood type</label><br>
            <select name="blood_type" id="blood_type">
                <option value="O-">O-</option>
                <option value="O+">O+</option>
                <option value="A-">A-</option>
                <option value="A+">A+</option>
                <option value="B-">B-</option>
                <option value="B+">B+</option>
                <option value="AB-">AB-</option>
                <option value="AB+">AB+</option>
            </select><br>
            <label for="times_donated">Number of Donations</label><br>
            <input min="1" size="15" type="number" id="times_donated" name="times_donated" required><br><br>
            <input type="submit" id="submitEntry" value="Add Entry">
        </form>
    </section>
    <section class="entry-display">
        <h3>Donors</h3>
        <table id="entry-list">
            <thead>
                <tr>
                    <th>Donor ID</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Phone</th>
                    <th>E-mail</th>
                    <th>Date of birth</th>
                    <th>Blood type</th>
                    <th>Donations</th>
                    <th id="delete-column"> </th>
                    <th id="edit-column"> </th>
                </tr>
            </thead>
            <tbody>
                {{#each donors}}
                    <tr>
                        <td>{{this.donor_id}}</td>
                        <td>{{this.first_name}}</td>
                        <td>{{this.last_name}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.email}}</td>
                        <td>{{dateFormat this.donor_DOB}}</td>
                        <td>{{this.blood_type}}</td>
                        <td>{{this.times_donated}}</td>
                        <td class="delete-column">
                            <button onclick="deleteBank({{this.donor_id}})">Delete</button>
                        </td>
                        <td class="edit-column">
                            <a href="/donors/{{this.donor_id}}">Edit</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
