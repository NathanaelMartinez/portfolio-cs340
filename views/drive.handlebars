
<div class="blood-drives">
    <section class="info">
        <h3>Blood Drive Database</h3>
        <p>
            This page will allow you to enter and update information on blood drives you hosted.
        </p>
    </section>
    <section class="add-entry">
        <h3>Add Entry</h3>
        <form>
            <label for="date">Drive Date</label><br>
            <input size="15" type="date" id="date" name="date"><br>
            <label for="amt-donated">Amount Donated</label><br>
            <input size="15" type="number" id="amt-donated" name="amt-donated"><br>
            <label for="city">City</label><br>
            <input size="15" type="text" id="city" name="city"><br>
            <label for="zip">Zip Code</label><br>
            <input size="15" maxlength="5" type="number" id="zip" name="zip"><br><br>
            <input type="submit" id="submitEntry" value="Add Entry">
        </form>
    </section>
    <<section class="entry-display">
        <h3>Blood Drives</h3>
        <table id="entry-list">
            <tr>
                <th>Entry ID</th>
                <th>Host Name</th>
                <th>Date</th>
                <th>Amount (in blood units)</th>
                <th>City</th>
                <th>Zip</th>
                <th id="delete-column"> </th>
                <th id="edit-column"> </th>
            </tr>
            <tr>
                <th>1</th>
                <th>Mercy Health Center</th>
                <th>11/12/2021</th>
                <th>332</th>
                <th>Spokane</th>
                <th>8294</th>
                <th id="delete-column">
                    <button type="submit">Delete</button>
                </th>
                <th id="edit-column">
                    <button type="submit">Update</button>
                </th>
            </tr>
        </table>
    </section>
    <hr>
</div>