            <th>97330</th>
            <th>541-768-5111</th>
            <th id="delete-column">
                <button type="submit">Delete</button>
            </th>
            <th id="edit-column">
                <button type="submit">Update</button>
            </th>
        </tr>
    </table>
</section>
    <hr>
</div>