<div class="web-page">
     <section class="info">
          <h1>Update {{bank.name}}:</h1>
     </section>
     <section class="add-entry">
          <form id="update-blood-bank" action="/blood-banks" method="post">
               <label for="name">Name</label><br>
               <input class="entryInput" size="15" type="text" pattern=[a-z]{5-40} id="name" value="{{bank.name}}" name="name" required><br>
               <label for="city">City</label><br>
               <input class="entryInput" size="15" type="text" pattern=[a-z]{2-40} id="city" value="{{bank.city}}" name="city" required><br>
               <label for="street">Street</label><br>
               <input class="entryInput" size="15" type="text" pattern=[a-z]{4-40} id="street" value="{{bank.street}}" name="street" required><br>
               <label for="zip">Zip Code</label><br>
               <input class="entryInput" size="15" type="text" pattern=[0-9]{5} id="zip" value="{{bank.zip}}" name="zip" required><br>
               <label for="phone">Phone</label><br>
               <input class="entryInput" size="15" placeholder="555-111-1111" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" type="tel" id="phone" value="{{bank.phone}}" name="phone" required><br><br>
          </form>
          <button onclick="updateBank({{bank.bank_id}})">Update</button>
     </section>
</div>