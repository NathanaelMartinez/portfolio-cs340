
<div class="blood-bank">
    <section class="info">
        <h3>Blood Bank Database</h3>
        <p>
            This page will allow you to update information about the blood banks in your system
        </p>
    </section>
    <section class="add-entry">
        <h3>Add Entry</h3>
        <form id="add-bank" action="/blood-banks" method="POST">
            <label for="name">Name</label><br>
            <input size="15" type="text" pattern=[a-z]{5-40} id="name" name="name" required><br>
            <label for="city">City</label><br>
            <input size="15" type="text" pattern=[a-z]{2-40} id="city" name="city" required><br>
            <label for="street">Street</label><br>
            <input size="15" type="text" pattern=[a-z]{4-40} id="street" name="street" required><br>
            <label for="zip">Zip Code</label><br>
            <input size="15" type="text" pattern=[0-9]{5} id="zip" name="zip" required><br>
            <label for="phone">Phone</label><br>
            <input size="15" placeholder="555-111-1111" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" type="tel" id="phone" name="phone" required><br><br>
            <input type="submit" id="submitEntry" value="Add Entry">
        </form>
    </section>
    <<section class="entry-display">
        <h3>Blood Banks</h3>
        <table id="entry-list">
            <thead>
                <tr>
                    <th>Entry ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Street</th>
                    <th>Zip</th>
                    <th>Phone</th>
                    <th class="delete-column"> </th>
                    <th class="edit-column"> </th>
                </tr>
            </thead>
            <tbody>
                {{#each banks}}
                <tr>
                    <td>{{this.bank_id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.city}}</td>
                    <td>{{this.street}}</td>
                    <td>{{this.zip}}</td>
                    <td>{{this.phone}}</td>
                    <td class="delete-column">
                        <button onclick="deleteBank({{this.bank_id}})">Delete</button>
                    </td>
                    <td class="edit-column">
                        <a href="/blood-banks/{{this.bank_id}}">Edit</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>
    <hr>
</div>