
<div class="Requests">
    <section class="info">
        <h3>Request from people</h3>
        <p>
            This page allows you to update information regarding the requests from hospitals in your system
        </p>
    </section>
    <section class="add-entry">
        <h3>Add Entry</h3>
        <form>
            <label for ="hospital">Hospital ID</label><br>
            <input size = "15" type = "text" id = "hospital" name="hospital"><br>
            <label for="amount">Amount Requested (in blood units)</label><br>
            <input size="15" maxlength="8" type="number" id="amount" name="amount"><br>
            <label for="bType">Blood Type</label><br>
            <input size="15" maxlength="3" type="text" id="bType" name="bType"><br>
            <label for="filled(yes/no)">Request Filled</label><br>
            <input size="15" type="checkbox" id="filled" name="filled"><br><br>
            <input type="submit" id="submitEntry" value="Add Entry">
        </form>
    </section>
    <<section class="entry-display">
    <h3>Requests</h3>
    <table id="entry-list">
        <tr>
            <th>Request ID</th>
            <th>Hospital ID</th>
            <th>Amount Requested (in blood units)</th>
            <th>Blood Type</th>
            <th>Filled</th>
            <th id="delete-column"> </th>
            <th id="edit-column"> </th>
        </tr>
        <tr>
            <th>1</th>
            <th>1</th>
            <th>150</th>
            <th>A+</th>
            <th>No</th>
            <th id="delete-column">
                <button type="submit">Delete</button>
            </th>
            <th id="edit-column">
                <button type="submit">Update</button>
            </th>
        </tr>
    </table>
</section>
</div>