
<div class="Requests">
    <section class="info">
        <h3>Request from people</h3>
        <p>
            This page allows you to update information regarding the requests from hospitals in your system
        </p>
    </section>
    <section class="add-entry">
        <h3>Add Entry</h3>
        <form id='add-request' action="/requests" method="POST">
            <label for="hospital_id">Hospital</label><br>
            <select name="hospital_id" id="hospital_id">
                <option value="0">----               </option>
                {{#each hospitals}}
                    <option value="{{this.hospital_id}}">{{this.name}}</option>
                {{/each}}
            </select><br>
            <label for="request_amt">Amount Requested</label><br>
            <input size="15" maxlength="8" type="number" id="amount" name="request_amt"><br>
            <label for="request_type">Blood Type</label><br>
            <input size="15" maxlength="3" type="text" id="request-type" name="request_type"><br>
            <label for="request_date">Request Date</label><br>
            <input size="15" maxlength="3" type="date" id="request-date" name="request_date"><br><br>
            <input type="submit" id="submitEntry" value="Add Entry">
        </form>
    </section>
    <<section class="entry-display">
    <h3>Requests</h3>
    <table id="entry-list">
        <thead>
            <tr>
                <th>Request ID</th>
                <th>Hospital</th>
                <th>Amount (in blood units)</th>
                <th>Blood Type</th>
                <th>Request Date</th>
                <th>Filled</th>
                <th id="delete-column"> </th>
                <th id="edit-column"> </th>
            </tr>
        </thead>
        <tbody>
        {{#each requests}}
            <tr>
                <td>{{this.request_id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.request_amt}}</td>
                <td>{{this.request_type}}</td>
                <td>{{dateFormat this.request_date}}</td>
                <td>{{yesNo this.request_filled}}</td>
                <td class="delete-column">
                    <button onclick="deleteBank({{this.request_id}})">Delete</button>
                </td>
                <td class="edit-column">
                    <a href="/requests/{{this.request_id}}">Update</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</section>
</div>