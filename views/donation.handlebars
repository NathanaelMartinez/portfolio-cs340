
<div class="blood-bank">
    <section class="info">
        <h3>Blood Donation Database</h3>
        <p>
            This page allows you to update information about the blood donations in your system.
        </p>
    </section>
    <section class="add-entry">
        <h3>Add Entry</h3>
        <form>
            <label for="bank-id">Blood Bank ID</label><br>
            <input size="15" type="number" id="bank-id" name="bank-id"><br>
            <label for="donor-id">Donor ID</label><br>
            <input size="15" type="number" id="donor-id" name="donor-id"><br>
            <label for="request-id">Request ID</label><br>
            <input size="15" type="number" id="request-id" name="request-id"><br>
            <label for="amount">Amount donated</label><br>
            <input size="15" type="number" id="amount" name="amount"><br>
            <label for="date-collected">Date collected</label><br>
            <input size="15" type="date" id="date-collected" name="date-collected"><br><br>
            <input type="submit" id="submitEntry" value="Add Entry">
        </form>
    </section>
    <<section class="entry-display">
        <h3>Blood Donations</h3>
        <table id="entry-list">
            <tr>
                <th>Donation ID</th>
                <th>Blood Bank ID</th>
                <th>Donor ID</th>
                <th>Request ID (Optional)</th>
                <th>Amount of Donation (in blood units)</th>
                <th>Date collected</th>
                <th id="delete-column"> </th>
                <th id="edit-column"> </th>
            </tr>
            <tr>
                <th>1</th>
                <th>1</th>
                <th>3</th>
                <th>NULL</th>
                <th>3</th>
                <th>10/28/2021</th>
                <th id="delete-column">
                    <button type="submit">Delete</button>
                </th>
                <th id="edit-column">
                    <button type="submit">Update</button>
                </th>
            </tr>
        </table>
    </section>
    <hr>
</div>